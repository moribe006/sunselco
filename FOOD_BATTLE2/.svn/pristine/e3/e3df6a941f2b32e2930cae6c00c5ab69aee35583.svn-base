@charset "UTF-8";

@media screen and (min-width: 768px) {
	html{
        width:auto;
        height: auto;
    }

@font-face{
font-family:dqfont;
src:url('PixelMplus10-Regular.woff')format('woff');
}
html{
	width:auto;
	height:auto;
	font-family:dqfont;
}

body{
	background-color:black;
	color:white;

}

/* ----------------------------------------------- */

.tolk{
	text-align:center;
	display:block;
	max-width:50%;
	margin:0 auto;
	 position: relative;
}

.king{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 10%;
    left: 47%;
}

.hero{
	display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 40%;
    left: 47%;

}

.night1{
	display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 15%;
    left: 33.5%;

}

.night2{
	display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 15%;
    left: 60%;

}



/* ----------------------------------------------- */

.explain{

	margin-left:auto;
	margin-right:auto;
    bottom:0;
	padding-left: 20px;
    position: relative;
	width:1060px;
	height:200px;
	border-style:solid;
	border-color:white;
	border-radius:10px;
	color:white;

}

.explain p{

}

/* ----------------------------------------------- */
input{
	right:20px;
	bottom:10px;
	position:absolute;

}
/* ----------------------------------------------- */
}

