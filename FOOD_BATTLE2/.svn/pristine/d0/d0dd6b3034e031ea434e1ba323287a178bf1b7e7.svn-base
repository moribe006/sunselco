@charset "UTF-8";

@media screen and (min-width: 768px) {
	html{
        width:auto;
        height: auto;
    }



@font-face{
font-family:dqfont;
src:url('PixelMplus10-Regular.woff')format('woff');
}

html{

	font-family:dqfont;
}

body{
	background-color:black;
	color:white;

}

.main{
	height:97vh;
    text-align:center;
    bottom:20px;
	padding-left: 20px;
	position:absolute;
	width:100%;
	height:200px;
	border-style:solid;
	border-color:white;
	border-radius:10px;
	color:white;

}

#name{
	background-color:black;
	border: 3px solid white;
	color:white;
	font-family:dqfont;
	float:left;
}
input{
	font-family:dqfont;
	float:left;
}
form{

	float:left;
}

}

