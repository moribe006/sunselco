/* --- 背景が上下左右に動くのBOX定義 ------------------------ */
box {
  position   : relative;
  max-width  : 500px;
  height     : 200px;
  margin     : auto;
  background : #ffffff;
}

/* --- 背景が上下左右に動くの背景定義 ----------------------- */
box::before {
  display    : block;
  content    : "";
  position   : absolute;
  top        : 0;
  right      : 0;
  bottom     : 0;
  left       : 0;
  background-image : url(./image.jpg);
  animation  : bgAnime 21s linear infinite;
}
@keyframes bgAnime {
   0% { background-position: 0 0 }
 100% { background-position: 500px -332px }
}

/* --- 前面の文字定義（サンプルのため変更してください） ----- */
